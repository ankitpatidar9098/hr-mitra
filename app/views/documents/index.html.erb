<div class="col-lg-12">
  <%= flash[:notice] %>
<div class="card rounded-0 mt-5 mb-4">
  <div class=card-body>
    <h1 class="text-centre">Listing Employee Documents</h1>
  </div>
</div>
<%= link_to "create new Documents",new_document_path,class: "btn btn-primary btn-lg mb-4" %>



<table class ="table table-bordered">
     <thead>
          <tr>
               <th>Name</th>
               
                 <th>Dpc type</th>
                 <th>Employee</th>
               <th>Action</th>
               
          </tr>
       </thead>
       <tbody>
         <% @documents.each do|document| %>
         <tr>
           <td><%= document.name %></td>
           <td><%= document.doc_type %></td>
           <td><%= document.employee.first_name %></td>
           <td>  <%= link_to "Edit",edit_document_path(document),class:"btn btn-primary" %>
            <%= link_to "show",document_path(document),class:"btn btn-info" %>
            <%= link_to "delete",document_path(document),class:"btn btn-danger",method: :delete,data:{confirm: 'Are you sure to delete this document'} %>,
           </td>
          
          </tr>
          <% end %>     
       </tbody>
     </table>   
   </div>